function playerWriter( swfURL, movieTitle, details ) {

	var playerHTML = "";
	var kaltura_player_id = "kaltura_player_" + Math.floor(Math.random()*1000000);

	playerHTML += '<object id="' + kaltura_player_id + '" name="kaltura_player"  allowFullScreen="true" allowNetworking="all" allowScriptAccess="always" height="348" width="512" xmlns:dc="http://purl.org/dc/terms/" xmlns:media="http://search.yahoo.com/searchmonkey/media/" rel="media:video" resource="';
	playerHTML += swfURL;
	playerHTML += '" data="' + swfURL + '">';
	playerHTML += '<param name="bgcolor" value="#000000" />';
	playerHTML += '<param name="movie" value="' + swfURL + '" />';
	playerHTML += '<a rel="media:thumbnail" href="' + swfURL + '" />';
	playerHTML += '<span property="dc:description" content="" />';
	playerHTML += '<span property="media:title" content="OCW Movie" />';
	playerHTML += '<span property="media:width" content="256" />';
	playerHTML += '<span property="media:height" content="174" />';
	playerHTML += '</object>';

	jQuery('#movie_dialog').dialog({
		autoOpen: false,  // hide dialog
		bgiframe: true,   // for IE6
		resizable: false,
		minHeight: 300,
		width: 550,
		position: 'top',
		modal: true,
		title: movieTitle,
		overlay: {
			backgroundColor: '#000',
			opacity: 0.5
		},
		buttons: {
			Close: function() {
                                kWidget.destroy(kaltura_player_id);
				jQuery(this).dialog('close');
			}
		},
		close: function(ev){
                        kWidget.destroy(kaltura_player_id);
//			jQuery('.collumn_01 .right').show();
		}
	});

	var detailsHTML = '<div style="text-align: left; line-height: 1.5em;">';
	for( var key in details ) {
		detailsHTML += '<div style="margin-top: 6px;">';
		detailsHTML += '<h4>' + key + '</h4>';
		detailsHTML += '<p>' + details[key] + '</p>';
		detailsHTML += "</div>";
	}
	detailsHTML += "</div>";

	jQuery("#movie_play_area").html(playerHTML);
	jQuery("#movie_details_area").html(detailsHTML);
	jQuery('#movie_dialog').dialog('open');
}
